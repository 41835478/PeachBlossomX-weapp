
.product-item {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 16rpx;
    background-color: white;
    margin-top: 1px;
}

.product-item-image {
    width: 160rpx;
    height: 160rpx;
}

.product-item-column {
    display: flex;
    margin-left: 16rpx;
    justify-content: space-between;
    flex-direction: column;
}

.product-item-title {
    font-size: 14px;
    color: #353535;
}

.product-item-unitprice{
    font-size: 12px;
    color: #aaaaaa;
    margin-top: 16rpx;
}

.product-item-message-input {
    font-size: 12px;
    color: #353535;
    height: 32rpx;
    margin-left: 64rpx;
}