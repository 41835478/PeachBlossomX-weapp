@import "productItem.wxss";
.order-item-container {
    display: flex;
    flex-direction: column;
    margin-top: 16rpx;
    width: 750rpx;
}

.order-item-row {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    margin-top: 1px;
    background-color: white;
    padding: 16rpx;
}

.order-item-primary-font {
    font-size: 14px;
    color: #353535;
}

.order-item-secondary-font {
    font-size: 12px;
    color: #aaaaaa;
}

.order-item-normal-button {
    display: flex;
    align-items: center;
    justify-content: center;
    color: #353535;
    font-size: 12px;
    border: 1px solid #aaaaaa;
    padding-left: 16rpx;
    padding-right: 16rpx;
    padding-top: 8rpx;
    padding-bottom: 8rpx;
}

.order-item-comfrim-button {
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 12px;
    border: 1px solid red;
    padding-left: 48rpx;
    padding-right: 48rpx;
    padding-top: 8rpx;
    padding-bottom: 8rpx;
    background-color: red;
    margin-left: 32rpx;
}